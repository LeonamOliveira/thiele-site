<IfModule mod_rewrite.c>
  RewriteEngine On

  # --- Regra para adicionar .html automaticamente ---

  # Condição 1: O URL solicitado não corresponde a um arquivo existente
  RewriteCond %{REQUEST_FILENAME} !-f
  # Condição 2: O URL solicitado não corresponde a um diretório existente
  RewriteCond %{REQUEST_FILENAME} !-d
  # Condição 3: Um arquivo com .html no final *existe*
  RewriteCond %{REQUEST_FILENAME}.html -f
  # Ação: Se todas as condições forem verdadeiras, reescreve internamente a URL para adicionar .html
  RewriteRule ^(.*)$ $1.html [L]

  # --- Regra Opcional para Diretórios (se necessário) ---
  # Se você tiver links como /produtos/categoria que deveriam carregar /produtos/categoria/index.html
  # RewriteCond %{REQUEST_FILENAME}/index.html -f
  # RewriteRule ^(.*[^/])$ $1/index.html [L]

</IfModule>

# Opcional: Se você tiver uma página 404 customizada (ex: 404.html na raiz)
ErrorDocument 404 /404.html